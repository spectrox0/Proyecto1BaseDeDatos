                     <i class="fas fa-folder-plus"></i> Crear producto </button>
         
               </td>
             </tr>
               <tr> <td colspan="8"> <div class="collapse" id="collapseExample1">
                 <form >
                   <div class="form-row">
                       <div class="form-group col-md-6">
                       <label for="avion">Avion</label>
                       <select  name="avion" class="custom-select" id="avion" required >
                         <option>XXXXX</option>
                         <option>yyyyy</option>
                         <option>Dasdasd</option>
                         <option>asdasd</option>
                       </select>
                     
                     </div>
                     <div class="form-group col-md-6">
                       <label for="it">Tipo de vuelo</label>
                       <select  name="it" class="custom-select" id="it" required >
                         <option>Directo</option>
                         <option>Escalado</option>
         
                       </select>
                     
                     </div>
       
                       </div>
     
                     <div class="form-row">
                         <div class="form-group col-md-3">
                             <label for="date">Fecha</label>
                             <br>
     
                           <input id="date" type="date">
     </div>
     
                                           <div class="form-group col-md-4">
                                               <label for="precios">Precio</label>
                                               <input name="precio" type="text" class="form-control" id="precios">
                                             </div>
                                            
                             
                     
                       </div>
                      
                     <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#selproductoid" >Guardar</button>
     
               </form>
                 </div>
             </td> </tr> </tfoot>
           </table>
       
         </div>
         
         




    </div>

   
    <% include partials/footer %> 
</body>
