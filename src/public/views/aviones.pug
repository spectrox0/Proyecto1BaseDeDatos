    .container
      .row
        h2.titulo
          img(src='', alt='')
      #selpr.modal.fade
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h3.modal-title Confirmar
              button.close(type='button', data-dismiss='modal') ×
            .modal-body
              p
                | Desea eliminar el avion
                br
                |                        (NO SE PODRA RECUPERAR DESPUES DE ESTO)
                br
                |                        Se sugiere mantener deshabilitado el campo de disponibilidad con anterioridad
                |                        durante un tiempo para prevenir posibles problemas con clientes
            .modal-footer
              button.btn.btn-primary(data-toggle='modal', data-target="'#'+'myModal'+producto.id")
                i.far.fa-times-circle
                |  Eliminar Producto
      #selproductoxid.modal.fade
        .modal-dialog.modal-lg
          .modal-content
            .modal-header
              h3.modal-title Edicion Avion
              button.close(type='button', (click)='clearState()', data-dismiss='modal') ×
            .modal-body
              form
              .form-row
                .form-group.col-md-6
                  label(for='avion') Modelo
                  select#avion.custom-select(name='avion', required='')
                    option XXXXX
                    option yyyyy
                    option Dasdasd
                    option asdasd
                .form-group.col-md-6
                  label(for='it') Fabricante
                  select#it.custom-select(name='it', required='')
                    option Directo
                    option Escalado
              .form-row
                .form-group.col-md-3
                  label(for='it') Itenerario
                  select#it.custom-select(name='it', required='')
                    option Directo
                    option Escalado
                .form-group.col-md-3
                  .custom-control.custom-checkbox
                    label.custom-control-label(for='Check1') Mantenimiento
                    br
                    input#Check1.custom-control-input(name='disponibilidad', type='checkbox')
                .form-group.col-md-3
                  .custom-control.custom-checkbox
                    label.custom-control-label(for='Check2') Internet
                    br
                    input#Check2.custom-control-input(name='disponibilidad2', type='checkbox')
                .form-group.col-md-3
                  .custom-control.custom-checkbox
                    label.custom-control-label(for='Check3') TV
                    br
                    input#Check3.custom-control-input(name='disponibilidad3', type='checkbox')
              button.btn.btn-primary(type='submit', data-toggle='modal', data-target='#selproductoid') Actualizar
      table.table.table-hover
        thead
          tr
            th Codigo Avion
            th Modelo
            th Fabricante
            th Estado
            th Itenerario
            th Internet
            th Television
            th Opciones
        tbody.collection
          tr
            td  
            td  
            td
            td  
            td
            td
            td
            td
              button.btn.btn-primary(type='button', data-toggle='modal', data-target='#selpr')
                i.far.fa-times-circle
                |  Eliminar
              button.btn.btn-secondary(type='button', data-toggle='modal', data-target='#selproductoxid')
                i.fas.fa-edit
                |  Editar
        tfoot
          tr
            td(colspan='8')
              button.btn(type='button', data-toggle='collapse', data-target='#collapseExample1', aria-expanded='false', aria-controls='collapseExample1')
                i.fas.fa-folder-plus
                |  Crear producto
          tr
            td(colspan='8')
              #collapseExample1.collapse
                form
                  .form-row
                    .form-group.col-md-6
                      label(for='avion') Avion
                      select#avion.custom-select(name='avion', required='')
                        option XXXXX
                        option yyyyy
                        option Dasdasd
                        option asdasd
                    .form-group.col-md-6
                      label(for='it') Tipo de vuelo
                      select#it.custom-select(name='it', required='')
                        option Directo
                        option Escalado
                  .form-row
                    .form-group.col-md-3
                      label(for='date') Fecha
                      br
                      input#date(type='date')
                    .form-group.col-md-4
                      label(for='precios') Precio
                      input#precios.form-control(name='precio', type='text')
                  button.btn.btn-primary(type='submit', data-toggle='modal', data-target='#selproductoid') Guardar
