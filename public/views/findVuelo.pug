extends base3
block content
  .contenedor2
    .row 
      a(href="/index")
        img(src="../images/Back.png")

      h2 
        | Vuelos Disponibles
    .row 
    form
      .form-row 
        table.table-responsive-sm
          thead
            tr
              th Hora Salida
              th Hora Entrada
              th Escalas
              th Precio
              th
          tbody
          - for (var i = 0; i < vuelos.length; i++)
            tr
              td #{vuelos[i].Hora_salida}
              td #{vuelos[i].hora_llegada}
              td USA
              td New York City
              td 
                input(type="radio", name="vueloSel", id="a" )
      hr          
      .form-row
        input(type="submit" , value ="Comprar")
